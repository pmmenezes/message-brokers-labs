apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: strimzi-kafka-exporter
  namespace: kafka
  labels:
    app.kubernetes.io/part-of: strimzi-kafka
spec:
  namespaceSelector:
    matchNames:
    - kafka
  selector:
    matchExpressions:
    - key: app.kubernetes.io/component
      operator: In
      values:
      - kafka-exporter
    - key: app.kubernetes.io/managed-by
      operator: In
      values:
      - strimzi-cluster-operator
  endpoints:
  - port: http
    path: /metrics
    interval: 30s
    scrapeTimeout: 10s
    relabelings:
    # Replica labels Ãºteis no target, incluindo as labels do Service do Strimzi
    - action: labelmap
      regex: __meta_kubernetes_service_label_(strimzi_io_.+)
    - action: replace
      sourceLabels: [ __meta_kubernetes_namespace ]
      targetLabel: namespace
    - action: replace
      sourceLabels: [ __meta_kubernetes_service_name ]
      targetLabel: service
